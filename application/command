#!/usr/bin/env bash

function pylint_module() {
  echo -e "\n====== Running pylint on '$1' ======\n"
  python3 -m pylint $1
}

function cmd_lint() {
  cd /home/webapp
  pylint_module core
  pylint_module webui
  pylint_module util
}

function cmd_test() {
  cd /home/webapp

  if [ -z ${1+x} ]; then
    tests=$(ls -1 tests/test_*.py)
    for test in $tests
    do
      # Remove the extension and replace directory separator with a period
      no_extension=${test%%.*}
      module=${no_extension/\//.}

      echo "Running $module"
      python3 -m $module
    done
  else
    echo "Running $1"
    python3 -m $1
  fi
}

case "$1" in
  "lint")
    cmd_lint
    ;;

  "test")
    cmd_test ${@:2}
    ;;

  *)
    echo -e "\nUsage:";
    echo "  $script [COMMAND]";
    echo -e "\nCommands:";
    echo "  lint      Run the static code analysis (linter) against the code";
    echo "  test [m]  Run all the unit tests or just module 'm'";
    ;;
esac
